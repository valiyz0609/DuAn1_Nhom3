<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#964B00"
            >

            <ImageView
                android:id="@+id/btnBackTTNV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/lui"
                />

            <TextView
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Thông tin nhân viên"
                android:textSize="25dp"
                android:layout_marginRight="30dp"

                />

        </LinearLayout>

        <ImageView
            android:layout_width="131dp"
            android:layout_height="135dp"
            android:src="@drawable/img_add_img"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Họ và tên"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edtAddNVTen"
                    style="@style/edt_TextBox2"
                    android:hint="Name"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Năm sinh"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edtAddNVNamsinh"
                    style="@style/edt_TextBox2"
                    android:hint="Date"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:text="Số điện thoại"
                    />

                <EditText
                    android:id="@+id/edtAddNVSdt"
                    style="@style/edt_TextBox2"
                    android:hint="PhoneNumber"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

                <TextView
                    style="@style/edt_Label"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tên đăng nhập"
                     />

                <EditText
                    android:id="@+id/edtAddNVTendangnhap"
                    style="@style/edt_TextBox2"
                    android:hint="UserName"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

                <TextView
                    style="@style/edt_Label"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Doanh Thu"
                   />

                <EditText
                    style="@style/edt_TextBox2"
                    android:hint="000.000"
                    android:editable="false"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            >

            <EditText
                android:id="@+id/btnSuaTTNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:text="Sửa"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:layout_marginRight="15dp"
                />

            <EditText
                android:id="@+id/btnXoaTTNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:text="Xóa"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>

    </LinearLayout>



</ScrollView>