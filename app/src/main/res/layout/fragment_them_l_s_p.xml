<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#964B00"
        >

        <ImageView
            android:id="@+id/btnBackLSP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lui"
            android:layout_marginLeft="15dp"
            />

        <TextView
            style="@style/edt_Label"
            android:id="@+id/txtSuaNVTittle"
            android:layout_width="match_parent"
            android:text="Thêm loại sản phẩm"
            android:textAlignment="center"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textSize="24dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <EditText
                android:id="@+id/edtAddSPLoai"
                style="@style/edt_TextBox2"
                android:layout_marginTop="5dp"
                android:hint="Tên Loại"
                android:background="@drawable/bo_edt"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >

        <EditText
            android:id="@+id/btnLSPHuy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bo_tron_edt"
            android:text="Hủy"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:editable="false"
            android:focusable="false"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/btnLSPXN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bo_tron_edt"
            android:text="Thêm"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:editable="false"
            android:focusable="false"
            />
    </LinearLayout>



</LinearLayout>